@model ProductViewModel


<h3>Atualizar Produto</h3>
<hr />

<form asp-action="AtualizarProduto">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ProductId" />

    <div class="form-group">
        <label asp-for="Description" class="col-md-2" control-label></label>
        <div class="col-md-10">
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Code" class="col-md-2" control-label></label>
        <div class="col-md-10">
            <input asp-for="Code" class="form-control" />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Supplier" class="col-md-2" control-label></label>
        <div class="col-md-10">
            <input asp-for="Supplier" class="form-control" />
            <span asp-validation-for="Supplier" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="ExpirationDate" class="col-md-2" control-label></label>
        <div class="col-md-10">
            <input type="date" asp-for="ExpirationDate" class="form-control" />
            <span asp-validation-for="ExpirationDate" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="col-md-2" control-label></label>
        <div class="col-md-10">
            <input type="number" step="0.01" asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>

    @{
        var categorias = new List<SelectListItem>
    {
    new SelectListItem { Value = "2", Text = "Bebidas" , Selected= true},
    new SelectListItem { Value = "3", Text = "Frutas" },
    new SelectListItem { Value = "4", Text = "Legumes" }
    };
    }
    @Html.DropDownListFor(model => model.CategoryId, categorias, "Selecione uma categoria")

    <div class="form-group" style="padding-top: 10px">
        <input type="submit" value="Salvar" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-info">Retornar</a>
    </div>

    @if(ViewBag.Erro != null)
    {
        <div style="color:red">
            <h4>@ViewBag.Erro</h4>
        </div>
    }


</form>





