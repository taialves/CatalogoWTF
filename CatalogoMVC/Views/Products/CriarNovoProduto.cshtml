@model ProductViewModel

<h2>Criar um Produto</h2>

<form asp-action="CriarNovoProduto">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>


        <div class="form-group">
            <label asp-for="Description" class="col-md-2" control-label></label>
            <div class="col-md-10">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Code" class="col-md-2" control-label></label>
            <div class="col-md-10">
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Supplier" class="col-md-2" control-label></label>
            <div class="col-md-10">
                <input asp-for="Supplier" class="form-control" />
                <span asp-validation-for="Supplier" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ExpirationDate" class="col-md-2" control-label></label>
            <div class="col-md-10">
                <input type="date" asp-for="ExpirationDate" class="form-control" />
                <span asp-validation-for="ExpirationDate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Price" class="col-md-2" control-label></label>
            <div class="col-md-10">
                <input type="number" step="0.01" asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>

        @{
            var categorias = new List<SelectListItem>
        {
        new SelectListItem { Value = "2", Text = "Bebidas" },
        new SelectListItem { Value = "3", Text = "Frutas" },
        new SelectListItem { Value = "4", Text = "Legumes" }
        };
        }

        @Html.DropDownListFor(model => model.CategoryId, categorias, "Selecione uma categoria")

        <div class="form-group" style="padding-top: 10px">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Criar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-info">Retornar</a>
            </div>
        </div>

        @if (@ViewBag.Erro != null)
        {
            <div style="color:red">
                <h4> @ViewBag.Erro</h4>
            </div>
        }
    </div>
</form>